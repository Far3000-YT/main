<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="base.Controllers.PrimaryController">
    <top>
        <MenuBar prefHeight="35.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuLogout" mnemonicParsing="false" text="Logout"/>
                        <MenuItem fx:id="menuExit" mnemonicParsing="false" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem fx:id="menuProjects" mnemonicParsing="false" text="Projects"/>
                        <MenuItem fx:id="menuEmployees" mnemonicParsing="false" text="Employee"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <HBox spacing="10.0"  style="-fx-padding: 10; -fx-alignment: top-center;">
            <children>
                <!-- Left Section: Personnel Management -->
                <VBox spacing="10.0" prefWidth="300.0" style="-fx-border-width: 1; -fx-border-color: lightgray;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label text="Personnel Management" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <Button text="Create Employee" maxWidth="Infinity"/>
                    <ListView prefHeight="200.0" prefWidth="150.0"/>
                    <VBox>
                        <Label text="Employee Details"/>
                        <Label text="Name"/>
                        <Label text="ID"/>
                        <Label text="Project History"/>
                        <ListView prefHeight="50.0" />
                        <HBox spacing="5.0" alignment="CENTER_RIGHT">
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Middle Section: Project Management -->
                <VBox spacing="10.0" prefWidth="300.0" style="-fx-border-width: 1; -fx-border-color: lightgray;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Button text="Create Project" maxWidth="Infinity" />
                    <Label text="Project Management" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <ListView prefHeight="200.0"  />
                    <VBox>
                        <Label text="Project Details" />
                        <Label text="Name"/>
                        <Label text="ID"/>
                        <Label text="Description"/>
                        <TextArea prefHeight="50.0" />
                        <Label text="Deadline"/>
                        <Label text="Project Members" />
                        <ListView prefHeight="50.0" />
                        <Button text="Add Member" maxWidth="Infinity"/>
                        <Label text="Tasks" />
                        <ListView  prefHeight="50.0"/>
                        <Button text="Add Task"  maxWidth="Infinity"/>
                        <HBox spacing="5.0" alignment="CENTER_RIGHT">
                            <Button text="Edit" />
                            <Button text="Delete" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Section: Project Monitoring -->
                <VBox spacing="10.0" prefWidth="300.0" style="-fx-border-width: 1; -fx-border-color: lightgray;">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label text="Project Monitoring" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="Kanban View" >
                                <content>
                                    <HBox spacing="10.0">
                                        <VBox style="-fx-border-color: lightgray; -fx-border-width: 1;"  alignment="TOP_CENTER" spacing="5.0" prefWidth="100">
                                            <padding><Insets top="5.0" left="5.0" right="5.0" bottom="5.0" /></padding>
                                            <Label text="To Do" style="-fx-font-weight: bold;" />
                                        </VBox>
                                        <VBox style="-fx-border-color: lightgray; -fx-border-width: 1;" alignment="TOP_CENTER" spacing="5.0" prefWidth="100">
                                            <padding><Insets top="5.0" left="5.0" right="5.0" bottom="5.0" /></padding>
                                            <Label text="In Progress" style="-fx-font-weight: bold;" />
                                        </VBox>
                                        <VBox style="-fx-border-color: lightgray; -fx-border-width: 1;"  alignment="TOP_CENTER" spacing="5.0" prefWidth="100">
                                            <padding><Insets top="5.0" left="5.0" right="5.0" bottom="5.0" /></padding>
                                            <Label text="Done" style="-fx-font-weight: bold;" />
                                        </VBox>
                                    </HBox>
                                </content>
                            </Tab>
                            <Tab text="Calendar View">
                                <content>
                                    <Label text="Calendar View"  alignment="CENTER"/>
                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>
                </VBox>
            </children>
        </HBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>