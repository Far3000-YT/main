            <Hyperlink fx:id="createAccount" graphicTextGap="2.0" layoutX="291.0" layoutY="395.0" onAction="#handleCreateAccount" text="Create an account" textFill="#c785a3" style="-fx-font-family: 'Georgia';" />

            <!-- Title Text -->
            <Text layoutX="318.0" layoutY="180.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login" style="-fx-font-family: 'Georgia'; -fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #c785a3;" />
         </children>
      </AnchorPane>
   </top>
</BorderPane>
