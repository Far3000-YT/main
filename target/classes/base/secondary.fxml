<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="base.Controllers.SecondaryController">
   <top>
      <AnchorPane prefHeight="500.0" prefWidth="536.0" style="-fx-background-color: linear-gradient(to bottom, #fbe4ef, #f8d7e5);" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="114.0" fitWidth="157.0" layoutX="294.0" layoutY="62.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #FFFFFF;">
               <image>
                  <Image url="@id.jpg" />
               </image>
            </ImageView>

            <!-- Username Field -->
            <TextField fx:id="usernameField" layoutX="298.0" layoutY="237.0" prefHeight="26.0" prefWidth="104.0" promptText="User Name" style="-fx-background-color: #ffffff; -fx-border-color: #c785a3; -fx-font-family: 'Georgia'; -fx-border-radius: 5; -fx-background-radius: 5;" />

            <!-- Password Field -->
            <PasswordField fx:id="passwordField" layoutX="298.0" layoutY="269.0" prefHeight="26.0" prefWidth="104.0" promptText="Password" style="-fx-background-color: #ffffff; -fx-border-color: #c785a3; -fx-font-family: 'Georgia'; -fx-border-radius: 5; -fx-background-radius: 5;" />

