<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #fbe4ef, #f8d7e5);" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="base.Controllers.EditEmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Edit Employee" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: 'Georgia'; -fx-text-fill: #c785a3;" />
    <TextField fx:id="employeeNameField" promptText="Employee Name" style="-fx-border-color: #c785a3; -fx-border-radius: 5; -fx-background-radius: 5;" />
    <HBox alignment="CENTER" spacing="20.0">
        <Button onAction="#handleUpdateEmployee" text="Update Employee" style="-fx-background-color: #d6a5b7; -fx-text-fill: white; -fx-font-family: 'Georgia'; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" />
        <Button onAction="#handleCancel" text="Cancel" style="-fx-background-color: #d6a5b7; -fx-text-fill: white; -fx-font-family: 'Georgia'; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" />
    </HBox>
</VBox>